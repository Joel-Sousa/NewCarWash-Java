<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/recyclerview_usuario"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRecyclerViewServicoServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TextViewServico"
                android:textColor="#050505"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewServicoValorServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextViewValor"
                android:textColor="#050505" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageViewRecyclerViewServicoEditar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_editar" />

    </LinearLayout>
</LinearLayout>