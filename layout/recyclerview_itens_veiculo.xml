<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/recyclerview_usuario"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRecyclerViewVeiculoVeiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextViewVeiculo"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewRecyclerViewVeiculoServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextViewServico"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewRecyclerViewVeiculoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextViewCliente"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageViewRecyclerViewVeiculoCheck"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_check" />

        <ImageView
            android:id="@+id/ImageViewRecyclerViewVeiculoEditar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_editar" />

    </LinearLayout>
</LinearLayout>